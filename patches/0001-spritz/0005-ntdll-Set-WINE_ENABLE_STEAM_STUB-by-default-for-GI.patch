@@ -2213,6 +2213,10 @@ static void hacks_init(void)
 {
     const char *sgi = getenv( "SteamGameId" );
     const char *env_str;
+
+    if (main_argc > 1 && (strstr(main_argv[1], "GenshinImpact.exe") || strstr(main_argv[1], "YuanShen.exe") || strstr(main_argv[1], "fpsunlock.exe")))
